RewriteEngine On
RewriteRule ^([0-9])$ handlers/sem.php?semester=$1 [L]
RewriteRule ^([0-9])/$ handlers/sem.php?semester=$1 [L]
RewriteRule ^([0-9]{3})$ handlers/subject.php?subject=$1 [L]
RewriteRule ^([0-9]{3})/$ handlers/subject.php?subject=$1 [L]
RewriteRule ^([0-9]+)/([0-9]+)$ handlers/permalink.php?sub=$1&chap=$2 [L]
RewriteRule ^([0-9]+)/([0-9]+)/$ handlers/permalink.php?sub=$1&chap=$2 [L]
RewriteRule ^r/([0-9]+)$ handlers/redirect.php?id=$1 [L]
RewriteRule ^r/([0-9]+)/$ handlers/redirect.php?id=$1 [L]
# RewriteRule ^([0-9]+)/([0-9]+)$ /index.php?subject=$1&chap=$2 [L]